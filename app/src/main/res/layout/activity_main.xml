<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <View android:id="@+id/dropBox"
          android:layout_width="match_parent"
          android:layout_height="@dimen/drop_box_height"
          android:background="@android:color/darker_gray"
          android:layout_gravity="bottom"/>

    <TextView android:id="@+id/squareView"
              android:layout_width="@dimen/square_size"
              android:layout_height="@dimen/square_size"
              android:layout_marginTop="@dimen/square_margin_top"
              android:background="@color/colorPrimary"
              android:textStyle="bold"
              android:gravity="center"
              android:layout_gravity="center_horizontal"
              android:textColor="@android:color/white"/>

</FrameLayout>